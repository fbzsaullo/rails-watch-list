<!DOCTYPE html>
<html>
  <head>
    <title>RailsWatchList</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="navbar navbar-dark bg-dark navba'r-expand-sm navbar-lewagon">
      <div class="container-fluid">
        <%= link_to lists_path, class: "navbar-brand" do %>
        <%= image_tag "https://cdn-icons-png.flaticon.com/512/3163/3163508.png" %>
        <% end %>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto">
              <li class="nav-item active">
                <%= link_to "Add list ", "/lists/new", class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "Home", lists_path, class: "nav-link" %>
              </li>
              <li class="nav-item dropdown">
                <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                  <%= link_to "Action", "#", class: "dropdown-item" %>
                  <%= link_to "Another action", "#", class: "dropdown-item" %>
                </div>
              </li>
          </ul>
        </div>
      </div>
    </div>

    <%= yield %>

    <div class="footer">
      <footer class="bg-dark text-center text-white">
        <!-- Grid container -->
        <div class="container p-4">
          <!-- Section: Social media -->
          <section class="mb-4">
            <!-- Github -->
            <a class="btn btn-outline-light btn-floating m-1" href="https://github.com/fbzsaullo" role="button"
              ><i class="fab fa-github"></i
            ></a>

            <!-- Twitter -->
            <a class="btn btn-outline-light btn-floating m-1" href="https://twitter.com/fabrizio_saullo" role="button"
              ><i class="fab fa-twitter"></i
            ></a>

            <!-- Instagram -->
            <a class="btn btn-outline-light btn-floating m-1" href="https://www.instagram.com/fabrizio_saullo/" role="button"
              ><i class="fab fa-instagram"></i
            ></a>

            <!-- Linkedin -->
            <a class="btn btn-outline-light btn-floating m-1" href="https://www.linkedin.com/in/fabriziosaullo/" role="button"
              ><i class="fab fa-linkedin-in"></i
            ></a>

          </section>
        </div>
          <!-- Section: Social media -->
      </footer>
      <!-- Footer -->
    </div>

  </body>
</html>
