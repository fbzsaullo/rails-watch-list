<div class="banner d-flex align-items-center justify-content-center" style="background-image: linear-gradient(rgba(33,37,41,0.0),rgba(33,37,41,1)), url(https://res.cloudinary.com/fbzsaullo/image/upload/v1653852074/Interno_SalaCinema-2_ljpa8o.jpg); background-position: center;">
  <div class="container text-center">
    <h1>My watch movies list!</h1>
  </div>
</div>

<div class="container mt-5">
  <div class="d-flex justify-content-between">
    <h2>My lists</h2>
    <%= link_to 'Create a New List', new_list_path, class: 'btn btn-primary mt-3' %>
  </div>

  <div class="cards mt-3 ">
    <% @lists.each do |list| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path list.image_url.key %>)">
        <%= link_to list.name, list_path(list) %>
      </div>
    <% end %>
  </div>
</div>
